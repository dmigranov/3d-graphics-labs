sampler2D texture1 : register(s0);

struct PS_INPUT
{
	float4 	Position	: POSITION;
	float4 	Color		: COLOR0;
	float4	uv1			: TEXCOORD0;
};

struct PS_OUTPUT
{
	float4 	Color	 	: COLOR0;
};

PS_OUTPUT main( PS_INPUT input )
{
	PS_OUTPUT output;

	float2 uv1Scale = float2(1, 1);
	float2 uv_r = float2(-input.uv1.x, input.uv1.y);
	float3 color1 = tex2D( texture1, uv_r * uv1Scale ).rgb;
	
	output.Color.rgb = color1;
	//output.Color.w   = input.Color.w;
	output.Color.a   = 1;

	return output;
};